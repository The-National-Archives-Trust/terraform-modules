[
  {
    "environment": [
      {
        "name": "WORDPRESS_DB_USER",
        "value": "${wp_db_user}"
      },
      {
        "name": "WORDPRESS_DB_PASSWORD",
        "value": "${wp_db_password}"
      },
      {
        "name": "WORDPRESS_DB_NAME",
        "value": "${wp_db_name}"
      },
      {
        "name": "WORDPRESS_DB_HOST",
        "value": "${wp_db_host}"
      },
      {
        "name": "WORDPRESS_TABLE_PREFIX",
        "value": "wp_"
      },
      {
        "name": "WORDPRESS_CONFIG_EXTRA",
        "value": "@ini_set( 'upload_max_size' , '64M' ); @ini_set( 'post_max_size', '128M'); @ini_set( 'memory_limit', '256M' );"
      }
    ],
    "memory": 800,
    "cpu": 1024,
    "image": "${repository_url}/wp_main_site_tna_trust:${image_tag}",
    "name": "wordpress",
    "portMappings": [
      {
        "hostPort": 80,
        "containerPort": 80,
        "protocol": "tcp"
      }
    ]
  }
]